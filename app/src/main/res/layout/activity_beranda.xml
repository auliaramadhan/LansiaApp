<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".BerandaActivity">

    <ImageView
        android:id="@+id/imgLana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/LANA" />

    <ImageView
        android:id="@+id/imgLapotik"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:onClick="lapotikClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLana"
        app:srcCompat="@drawable/Lapotik_img" />

    <ImageView
        android:id="@+id/imgLamasi"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="@android:dimen/notification_large_icon_height"
        android:clickable="true"
        android:onClick="lamasiClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLapotik"
        app:srcCompat="@drawable/Lamasi_img" />

    <ImageView
        android:id="@+id/imgLaminder"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="@android:dimen/notification_large_icon_height"
        android:layout_marginEnd="48dp"
        android:clickable="true"
        android:onClick="laminderClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLapotik"
        app:srcCompat="@drawable/Laminder_img" />

    <ImageView
        android:id="@+id/imgLahraga"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="@android:dimen/notification_large_icon_width"
        android:clickable="true"
        android:onClick="lahragaClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLamasi"
        app:srcCompat="@drawable/Lahraga_img" />

    <ImageView
        android:id="@+id/imgPanduan"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="48dp"
        android:onClick="panduanClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLaminder"
        app:srcCompat="@drawable/Panduan_img" />

    <TextView
        android:id="@+id/txtLapotik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/textfont"
        android:text="LAPOTIK"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLapotik" />

    <TextView
        android:id="@+id/txtPanduan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/textfont"
        android:text="PANDUAN"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imgPanduan"
        app:layout_constraintStart_toStartOf="@+id/imgPanduan"
        app:layout_constraintTop_toBottomOf="@+id/imgPanduan" />

    <TextView
        android:id="@+id/txtLahraga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/textfont"
        android:text="LAHRAGA"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imgLahraga"
        app:layout_constraintStart_toStartOf="@+id/imgLahraga"
        app:layout_constraintTop_toBottomOf="@+id/imgLahraga" />

    <TextView
        android:id="@+id/txt "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/textfont"
        android:text="LAMINDER"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imgLaminder"
        app:layout_constraintStart_toStartOf="@+id/imgLaminder"
        app:layout_constraintTop_toBottomOf="@+id/imgLaminder" />

    <TextView
        android:id="@+id/txtLamasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/textfont"
        android:text="LAMASI"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imgLamasi"
        app:layout_constraintStart_toStartOf="@+id/imgLamasi"
        app:layout_constraintTop_toBottomOf="@+id/imgLamasi" />
</androidx.constraintlayout.widget.ConstraintLayout>