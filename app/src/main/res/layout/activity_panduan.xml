<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    tools:context=".PanduanActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_lana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="32dp"
        app:srcCompat="@drawable/LANA" />

    <TextView
        android:id="@+id/helplapotik"
        android:onClick="helpLapotikclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:fontFamily="@font/textfont"
        android:text="Cara Menggunakan Lapotik"
        android:background="@color/colorButton"
        android:textColor="@color/colorTextButton"
        android:textSize="18sp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/helplamasi"
        android:onClick="helpLamasiclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:fontFamily="@font/textfont"
        android:text="Cara Menggunakan Lapotik"
        android:background="@color/colorButton"
        android:textColor="@color/colorTextButton"
        android:textSize="18sp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/helplaminder"
        android:onClick="helpLaminderclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:fontFamily="@font/textfont"
        android:text="Cara Menggunakan Lapotik"
        android:background="@color/colorButton"
        android:textColor="@color/colorTextButton"
        android:textSize="18sp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/helplahraga"
        android:onClick="helpLahragaclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:fontFamily="@font/textfont"
        android:text="Cara Menggunakan Lapotik"
        android:background="@color/colorButton"
        android:textColor="@color/colorTextButton"
        android:textSize="18sp"
        android:clickable="true" />

    <TextView
        android:id="@+id/callcenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:fontFamily="@font/textfont"
        android:text="CALL CENTER"
        android:background="@color/colorButton"
        android:textColor="@color/colorTextButton"
        android:textSize="18sp"
        android:clickable="true"
        android:onClick="callCenteclick"/>


</LinearLayout>