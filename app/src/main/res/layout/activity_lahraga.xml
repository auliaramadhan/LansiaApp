<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".LahragaActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_lana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="32dp"
        app:srcCompat="@drawable/LANA" />

    <TextView
        android:id="@+id/btnBeginner"
        android:onClick="beginner"
        android:layout_marginBottom="16dp"
        android:text="beginner 3 Menit"
        style="@style/button_view" />

    <TextView
        android:id="@+id/btnIntermediate"
        android:onClick="intermediate"
        android:layout_marginBottom="16dp"
        android:text="Intermediate 5 Menit"
        style="@style/button_view" />

    <TextView
        android:id="@+id/btnAdvance"
        android:onClick="Advance"
        android:layout_marginBottom="16dp"
        android:text="Advance 10 Menit"
        style="@style/button_view" />

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/third_party_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"/>



</LinearLayout>