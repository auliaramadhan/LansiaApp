<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_gradient"
    tools:context=".PembayaranActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/lana"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:id="@+id/imgvw" />

    <EditText
        android:id="@+id/txtalamat"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat pengiriman"
        android:padding="16dp"
        android:lines="6"
        android:minLines="6"
        android:gravity="top|left"
        android:maxLines="6"
        android:background="@drawable/border_background"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView1">

        <RadioButton
            android:id="@+id/radiocash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="bayar Secara Cash" />

        <RadioButton
            android:id="@+id/radiobca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bayar dengan BCA" />
    </RadioGroup>

    <EditText
        android:id="@+id/txtnoBCA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="8dp"
        android:hint="Nomor virtual account" />


    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


    <Button
        android:id="@+id/btnsimpan"
        android:text="Simpan"
        android:gravity="center"
        android:layout_gravity="end"
        style="@style/button_medium"
        android:layout_marginTop="24dp" />


</LinearLayout>